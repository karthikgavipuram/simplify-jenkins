{
  "compileOnSave": false,
  "compilerOptions": {
    // "baseUrl": "./",
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@env": ["environments/environment"],
      "@root/*": ["app/root/*"],
      "@assets/*":["assets/*"],
      "@shared-module":["app/root/modules/dashboard/shared/shared.module.ts"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
